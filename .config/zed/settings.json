  "base_keymap": "SublimeText",
  "when_closing_with_no_tabs": "close_window",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "lsp": {
    "biome": {
      "settings": {
        "config_path": "/home/jani/.config/biome.json"
      }
    }
  },
  "languages": {
    "JavaScript": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
    "JSON": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
    "JSONC": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    }
  }
}
